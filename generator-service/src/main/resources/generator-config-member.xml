<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">

        <!-- 自动检查关键字，为关键字（例如Select DELETE 以及后面的表名）增加反引号 -->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--覆盖生成XML文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <!-- 生成的实体类添加toString()方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 不生成注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!-- 配置数据源，需要根据自己的项目修改 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://rm-cn-uax39xxd10011clo.rwlb.rds.aliyuncs.com/train-member?serverTimezone=Asia/Shanghai"
                        userId="train_member"
                        password="KEY!moling!6">
        </jdbcConnection>

        <!-- domain类的位置 targetProject是相对pom.xml的路径-->
<!--        当前是在generator-service目录 ../ 之后就是在jk-tickets 里面了-->
<!--    com.jktickets.domain domain我们默认是没有的我们让他自动创建    -->
        <javaModelGenerator targetProject="../member-service/src/main/java"
                            targetPackage="com.jktickets.domain"/>

        <!-- mapper xml的位置 targetProject是相对pom.xml的路径 -->
        <sqlMapGenerator targetProject="../member-service/src/main/resources"
                         targetPackage="mapper"/>

        <!-- mapper类的位置 targetProject是相对pom.xml的路径 -->
        <javaClientGenerator targetProject="../member-service/src/main/java"
                             targetPackage="com.jktickets.mapper"
                             type="XMLMAPPER"/>


<!--        tableName 需要生成哪张表我们就写对应的表  domainObjectName生成的类名-->
        <table tableName="member" domainObjectName="Member"/>
<!--        <table tableName="passenger" domainObjectName="Passenger"/>-->
    </context>
</generatorConfiguration>
